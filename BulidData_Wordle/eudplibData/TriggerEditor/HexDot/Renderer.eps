import HexDot.HexDotMatrix as hm;

const drawLoc = $L('draw');
const scale = 3;
var x_offset, y_offset; // 실제 xy

function ImageOffset(x, y){
    x_offset = x+8;
    y_offset = y+8;
}

function addImageOffset(x, y){
    x_offset += x;
    y_offset += y;
}

function getHexNumber(letter, x){
    return hm.HexArr_Hangeul[x + letter * hm.size_X];
}

function DisplayDot(cp, letter)
{// DisplayDot(HexDotMatrix.A);
    for(var x=0; x<5; x++)
    {// 배열순환
        const hexNumber = getHexNumber(letter, x);

        var y=0;
        for(var i=1; i<=64; i=i*2)
        {// each hex num is sum of column
            if(hexNumber & i)
            {// print dot
                setloc(drawLoc, x * scale + x_offset, y * scale + y_offset);
                CreateUnit(1, 184, drawLoc, cp);
            }
            y++;
        }
    }
    GiveUnits(All, 184, cp, 64, P12);
}